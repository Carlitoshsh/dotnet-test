@page "/counter"
@rendermode InteractiveServer

<PageTitle>This initial-scale </PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn" @onclick="@(() => IncrementCount(-1))">Back</button>
<button class="btn" @onclick="@(() => IncrementCount(1))">Next</button>

@code {
    private int currentCount = 0;

    private void IncrementCount(int factor)
    {
        currentCount = currentCount + factor;
    }
}
